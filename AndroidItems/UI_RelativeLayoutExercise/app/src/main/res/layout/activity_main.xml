<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zerlin.ui_relativelayoutexercise.MainActivity">

    <TextView
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:background="@color/coral"/>

    <TextView
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_alignParentEnd="true"
        android:background="@color/coral"/>

    <TextView
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_alignParentBottom="true"
        android:background="@color/coral"/>

    <TextView
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@color/coral"/>

    <TextView
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_centerHorizontal="true"
        android:background="@color/sandybrown"/>

    <TextView
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_centerVertical="true"
        android:background="@color/sandybrown"/>

    <TextView
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@color/sandybrown"/>

    <TextView
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:background="@color/sandybrown"/>

    <TextView
        android:id="@+id/text_center"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_centerInParent="true"
        android:background="@color/crimson"/>

    <TextView
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_above="@+id/text_center"
        android:layout_toStartOf="@+id/text_center"
        android:background="@color/orchid"/>

    <TextView
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_above="@+id/text_center"
        android:layout_toEndOf="@+id/text_center"
        android:background="@color/orchid"/>

    <TextView
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_below="@+id/text_center"
        android:layout_toStartOf="@+id/text_center"
        android:background="@color/orchid"/>

    <TextView
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_below="@+id/text_center"
        android:layout_toEndOf="@+id/text_center"
        android:background="@color/orchid"/>

</RelativeLayout>

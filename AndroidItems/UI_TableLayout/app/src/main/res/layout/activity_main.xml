<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    android:shrinkColumns="1"
    android:collapseColumns="0"
    tools:context="com.example.zerlin.ui_tablelayout.MainActivity">

    <!--
    -->
    <TextView
        />

    <TableRow>

        <Button
            android:text="7"/>
        <Button
            android:text="8"/>
        <Button
            android:text="9"/>
        <Button
            android:text="/"/>

    </TableRow>

    <TableRow>

        <Button
            android:text="4"/>
        <Button
            android:text="5"/>
        <Button
            android:text="6"/>
        <Button
            android:text="*"/>

    </TableRow>

    <TableRow>

        <Button
            android:text="1"/>
        <Button
            android:text="2"/>
        <Button
            android:text="3"/>
        <Button
            android:text="-"/>

    </TableRow>

    <TableRow>

        <Button
            android:text="0"/>
        <Button
            android:text="."/>
        <Button
            android:text="+"/>
        <Button
            android:text="="/>

    </TableRow>

    <Button
        android:text="clear"
        android:textAllCaps="false"/>


</TableLayout>
